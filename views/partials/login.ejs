<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      :root {
        --bs-primary: #36007d;
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
      }

      .btn-primary {
        background-color: var(--bs-primary) !important;
        border-color: var(--bs-primary) !important;
      }

      .bg-primary {
        background-color: var(--bs-primary) !important;
      }

      .text-primary {
        color: var(--bs-primary) !important;
      }

      .text-large {
        font-size: 50px;
      }

      .main-content {
        flex: 1;
      }

      .footer-img {
        width: 100%;
        height: auto;
        display: block;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5 main-content">
      <img src="/images/logo.png" style="height: 100px" alt="Logo" />
      <div class="mt-4">
        <h1 class="text-large">Hello,</h1>
        <h1 class="text-primary text-large">Welcome To</h1>
        <h1 class="text-large">Monseuâ€™s Minimarket</h1>
      </div>
      <%- include('partials/notifications') %>
      <div class="mt-4">
        <form action="/auth" method="post">
          <div class="form-floating mb-3">
            <input
              type="email"
              name="email"
              class="form-control"
              id="floatingInput"
              placeholder="name@example.com"
            />
            <label for="floatingInput">Email address</label>
          </div>
          <div class="form-floating mb-3">
            <input
              name="password"
              type="password"
              class="form-control"
              id="floatingPassword"
              placeholder="Password"
            />
            <label for="floatingPassword">Password</label>
          </div>
          <button type="submit" class="btn btn-primary">Enter</button>
        </form>
        <a href="/auth/register">Don't have an account? Register Now</a>
      </div>
    </div>

    <!-- Footer image -->
    <img src="/images/footer.png" alt="Footer" class="footer-img" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
