<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      :root {
        --bs-primary: #36007d;
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
      }

      .btn-primary {
        background-color: var(--bs-primary) !important;
        border-color: var(--bs-primary) !important;
      }

      .bg-primary {
        background-color: var(--bs-primary) !important;
      }

      .text-primary {
        color: var(--bs-primary) !important;
      }

      .text-large {
        font-size: 50px;
      }

      .main-content {
        flex: 1;
      }

      .footer-img {
        width: 100%;
        height: auto;
        display: block;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5 main-content">
      <img src="/images/logo.png" style="height: 100px" alt="Logo" />
      <div class="mt-4">
        <h1 class="text-large">Create a New Account</h1>
        <h2 class="text-primary">Monseuâ€™s Minimarket</h2>
      </div>
      <%- include('partials/notifications') %>
      <div class="mt-4">
        <form action="/auth/register" method="POST">
          <div class="form-floating mb-3">
            <input
              type="text"
              class="form-control"
              id="floatingName"
              name="name"
              placeholder="Full Name"
              required
            />
            <label for="floatingName">Full Name</label>
          </div>

          <div class="form-floating mb-3">
            <input
              type="email"
              class="form-control"
              id="floatingEmail"
              name="email"
              placeholder="name@example.com"
              required
            />
            <label for="floatingEmail">Email Address</label>
          </div>

          <div class="form-floating mb-3">
            <input
              type="password"
              class="form-control"
              id="floatingPassword"
              name="password"
              placeholder="Password"
              required
            />
            <label for="floatingPassword">Password</label>
          </div>

          <div class="form-floating mb-3">
            <select class="form-control" id="floatingRole" name="role" required>
              <option value="customer">Customer</option>
              <option value="admin">Admin</option>
            </select>
            <label for="floatingRole">Role</label>
          </div>

          <button type="submit" class="btn btn-primary">Register</button>
        </form>

        <div class="mt-3">
          <a href="/auth">Already have an account? Login here</a>
        </div>
      </div>
    </div>

    <!-- Footer image -->
    <img src="/images/footer.png" alt="Footer" class="footer-img" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
